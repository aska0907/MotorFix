<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OrangeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/orange</item>
    </style>
    <style name="PinkButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">#FFE4E1</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="OrangeToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#FFA500</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="buttonStyle">@style/PinkButtonStyle</item>
        <item name="toolbarStyle">@style/OrangeToolbarStyle</item>
        <item name="android:windowBackground">@color/light_pink</item>
    </style>

</resources>
